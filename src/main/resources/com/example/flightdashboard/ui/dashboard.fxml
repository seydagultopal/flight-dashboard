<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.ProgressBar?>
<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/23.0.1"
      fx:controller="com.example.flightdashboard.ui.DashboardView"
      prefWidth="800" prefHeight="600">
    <Label text="İrtifa" />
    <Slider fx:id="altitudeSlider" prefWidth="300"/>
    <Label text="Hız" />
    <Slider fx:id="speedSlider" prefWidth="300"/>
    <Label text="Yakıt" />
    <ProgressBar fx:id="fuelBar" prefWidth="300"/>
</VBox>
